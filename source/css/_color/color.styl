@import url(https://unpkg.com/browse/@highlightjs/cdn-assets@11.6.0/styles/atom-one-light.min.css)

:root[theme-mode=dark]
  --body-background s('url(' + hexo-config('background_image.dark') + ')')

  --theme-highlight #2bf
  --theme-subcolor #fe2
  --theme-stress #C0392B

  --theme-bar-color-0 #fe2
  --theme-bar-color-1 #fe2a
  --theme-bar-color-2 #fe24
  --theme-bar-color-3 #fe22

  --theme-kbd-shadow #ba2

  --theme-cursor #ccc
  --theme-cursor-bg #fff8

  --theme-text-hover #000

  --theme-text #c4c4c4
  --theme-text-light #fff
  --theme-text-rev #000

  --theme-background #141516
  --theme-bg-trans0 rgba(20, 21, 22, 0.95)
  --theme-bg-trans1 rgba(20, 21, 22, 0.8)
  --theme-bg-hover #000

  --theme-bg-light #fff
  --theme-bg-soft rgba(#fff, .05)
  --theme-bg-soft-hover rgba(#fff, .1)

  --theme-code-header rgba(#fff, .2)

  --theme-btn-bg #d4d8dd

  --theme-border  #fe2
  --theme-border-light #fff
  --theme-border-soft rgba(#fff, .1)

  --theme-unimportant #898989
  --theme-unimportant-trans #89898966
  --theme-unimportant-2 #535353

  --theme-td-border #2bf
  --theme-td-hover rgba(#2bf, .1)

  --theme-tag-bg #313131
  --theme-tag-count-bg #494949
  --theme-tag-border #313131

  --theme-loadingbar #fff

:root[theme-mode=light]
  --body-background s('url(' + hexo-config('background_image.light') + ')')

  --theme-highlight #2bf
  --theme-subcolor #fe2
  --theme-stress #C0392B

  --theme-bar-color-0 #fe2
  --theme-bar-color-1 #fe2b
  --theme-bar-color-2 #fe28
  --theme-bar-color-3 #fe25

  --theme-kbd-shadow #ba2

  --theme-cursor #333
  --theme-cursor-bg #0004

  --theme-text-hover #000

  --theme-text #222
  --theme-text-light #000
  --theme-text-rev #fff

  --theme-background #f4f5f6
  --theme-bg-trans0 rgba(#f4f5f6, 0.95)
  --theme-bg-trans1 rgba(#f4f5f6, 0.5)
  --theme-bg-hover #fff

  --theme-bg-light #000
  --theme-bg-soft rgba(#fff, .3)
  --theme-bg-soft-hover rgba(#fff, .6)

  --theme-code-header #c0c0c0

  --theme-btn-bg #2a272d

  --theme-border  #fe2
  --theme-border-light #000
  --theme-border-soft rgba(#000, .1)

  --theme-unimportant #767676
  --theme-unimportant-trans #76767666
  --theme-unimportant-2 #acacac

  --theme-td-border #2bf
  --theme-td-hover rgba(#2bf, .1)

  --theme-tag-bg #313131
  --theme-tag-count-bg #494949
  --theme-tag-border #313131

  --theme-loadingbar #fff

  .navItemTitle,
  aside footer
    font-weight bold
    text-shadow: 0 0 15px white, 0 0 15px white, 0 0 15px white, 0 0 15px white
  :where(.recent-post, #paginator a)
    background-color #fff4

