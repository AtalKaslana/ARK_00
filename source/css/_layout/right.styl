@media ( min-width 769px )
  header
    left 0
  aside
    right 0
    border-left #fe2 solid 2px

@media ( max-width 1023px )
  .navContent
    padding-left 0
    transform translateX(-100%)
  .navItem
    padding-left 2.5em

@media ( min-width 992px )
  @media ( max-width 1919px )
    aside
      padding 0 25px 0 15px

@media ( min-width 1024px )
  .navContent
    padding 1em 1em 1em 0
    transform unset
  .navItem
    padding-left .8em
    .navItemTitle:hover
      margin-left 1em
    a
      text-align right
      .navItemTitle::after
        border-left 4px solid
      &:hover .navItemTitle
        margin-left 1em

@media ( min-width 1440px )
  .navItem
    padding-left 2.25em

@media ( min-width 1920px )
  .navItem
    padding-left 5.25em
  aside
    right 5%
